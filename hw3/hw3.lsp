;next-states: return a list of next possible states
(defun next-states (s)
    (cleanUpList (list (try-move s '(0 -1)) (try-move s '(1 0)) (try-move s '(0 1)) (try-move s '(-1 0))));end
  )

;update-keeper: move the keeper from the original position. The original position can only turn into star or blank 
(defun update-keeper (x y s)
	(cond ((isKeeperStar (car (nthcdr x (car (nthcdr y s))))) star)
		  (t blank)))

;set-square: given an integer content v with row number r and column number c, change the content in (c, r) to v
(defun set-square (v r c)
	(cond ((null v) nil)
	      ((null r) nil)
	      ((null c) nil))
	(let* ((front (butlast r (- (length r) c))) (back (nthcdr (+ c 1) r)))
		(append front (list v) back)))

;move: given current state s move the content v to (c, r)
;Arguments: v, an updated square content. x, row number. y, column number. s, current state
;;Returned values: a new state s
(defun move (v c r s)
	(cond ((null v) nil)
		  ((null c) nil)
		  ((null r) nil)
		  ((null s) nil)
		  ((= 0 r) (cons (set-square v (car s) c) (rest s)))
		  (t (cons (first s) (move v c (- r 1) (rest s))))))

;push-box: push the box in the given direction from (x,y)
(defun push-box (x y s direction)
	(let ((row (+ y (cadr direction)))
		  (col (+ x (car direction))))
	     (cond ((null s) nil)
	     	   ((null direction) nil)
	     	   ((< row 0) nil)
	     	   ((< col 0) nil)
	     	   (t (let* ((pos (car (nthcdr col (car (nthcdr row s))))))
	     	   	        (cond ((null pos) nil)
	     	   	        	  ((isWall pos) nil)
	     	   	        	  ((isBlank pos) (move box col row s))
	     	   	        	  ((isStar pos) (move boxstar col row s))
	     	   	        	  (t nil)))))))

;try-move: given current state s, try a specific direction.
;there are various conditions according the game spec
;if the destination is wall, do nothing
;if the destination is blank, the keeper goes there
;if he destination is star or boxstar, push box
(defun try-move (s direction)
	(let* ((pos (getKeeperPosition s 0))
		   (x (car pos))
	       (y (cadr pos))
	       (cur-keeper (update-keeper x y s))
	       (row (+ y (cadr direction)))
	       (col (+ x (car direction))))
	      (cond ((null s) nil)
	      	    ((null direction) nil)
	      	    ((< row 0) nil)
	      	    ((< col 0) nil)
	      	    (t (let* ((cur-pos (car (nthcdr col (car (nthcdr row s))))))
	      	    	     (cond ((null cur-pos) nil)
	      	    	     	   ((isWall cur-pos) nil)
	      	    	     	   ((isBlank cur-pos) (move cur-keeper x y (move keeper col row s)))
	      	    	     	   ((isBox cur-pos) (move cur-keeper x y (move keeper col row (push-box col row s direction))))
	      	    	     	   ((isStar cur-pos) (move cur-keeper x y (move keeperstar col row s)))
	      	    	     	   ((isBoxStar cur-pos) (move cur-keeper x y (move keeperstar col row (push-box col row s direction))))
	      	    	     	   (t nil)))))))
